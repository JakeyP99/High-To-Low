<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitionAnimation</item>
        <item name="android:keepScreenOn">true</item>
    </style>

    <style name="WalkthroughTheme" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="SwitchBlueDarkStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/bluedark</item>
    </style>

    <style name="ActivityTransitionAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_out_to_left</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@null
        </item> <!-- Removes default window background -->
        <item name="android:background">@drawable/rounded_background
        </item> <!-- Set your desired background -->
    </style>

    <style name="newToast">
        <item name="stColorBackground">#4C4C4C</item>
        <item name="stTextColor">@color/white</item>
        <item name="stLength">SHORT</item>
        LONG or SHORT
        <item name="stRadius">40dp</item>

    </style>


</resources>